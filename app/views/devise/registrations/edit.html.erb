<h1>ユーザー設定</h1>
<section class="form-flame">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>
    <div class="field">
      <%= f.label :edit_image %><br />
      <%= f.file_field :image %>
    </div>
    <div class="field">
      <%= f.label :password %> <i>(変更しない場合は空白にしてください)</i><br />
      <%= f.password_field :password, autocomplete: 'new-password', :class => 'form-control' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', :class => 'form-control' %>
    </div>
    <div class="line-space"></div>
    <div class="field">
      <%= f.label :email, :class => 'required' %> <i>(変更内容を確認するために必要です)</i><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', :class => 'form-control' %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field">
      <%= f.label :current_password, :class => 'required' %> <i>(変更内容を確認するために必要です)</i><br />
      <%= f.password_field :current_password, autocomplete: 'current-password', :class => 'form-control' %>
    </div>
    <div class="line-space"></div>
    <p class="page-control center">
      <%= f.submit '修正する', :class => 'btn-control green' %>
    </p>
  <% end %>
  <div class="line-space"></div>
  <h2>アカウントの削除</h2>
  <p>本当にアカウントを削除しますか？ <%= button_to 'アカウントを削除する', registration_path(resource_name), data: { confirm: '本当に良いですか？' }, method: :delete %></p>
</section>
<p class="page-control center"><%= link_to 'トップへ戻る', root_path, :class => 'btn-control blue' %></p>
